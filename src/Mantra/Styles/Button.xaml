                                    <ThicknessAnimation Storyboard.TargetName="Slider"
                                                        Storyboard.TargetProperty="Margin"
                                                        To="40 0 0 0"
                                                        Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <!-- EventTriggers Unchecked -->
                        <EventTrigger RoutedEvent="Unchecked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="Border"
