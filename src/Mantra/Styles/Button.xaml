                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Height="30"
                                Width="80"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                            <!-- Option -->
                            <!-- <Border.Effect> -->
