<local:BasePage x:Class="Mantra.CollectionPage"
                x:ClassModifier="internal"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="clr-namespace:Mantra"
                d:DataContext="{d:DesignInstance Type=local:CollectionViewModel}"
                mc:Ignorable="d"
                Title="ImageListPage"
                d:DesignHeight="450"
                d:DesignWidth="800">

    <ScrollViewer SnapsToDevicePixels="True "
                  HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto"
                  Margin="30">
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <!-- Image Items -->
            <ItemsControl ItemsSource="{Binding ImageList}">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid SnapsToDevicePixels="True " Width="100" Height="100">

                            <!-- Preview Image -->
                            <Border BorderBrush="Gray" Width="80" Height="80" BorderThickness="1">
                                <Border.InputBindings>
                                    <MouseBinding Gesture="LeftClick"
                                                  Command="{Binding Path=DataContext.GoToCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                                  CommandParameter="{Binding}" />
                                </Border.InputBindings>

                                <Image Source="{Binding}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            </Border>

                            <!-- Close Button -->
                            <Button Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Command="{Binding DataContext.RemoveCommand ,RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                    CommandParameter="{Binding}"
                                    Margin="0 2 2 0">
                                <Image
                                    Source="{Binding Source=media/close_small.png, Converter={local:FilepathBytesConverter}}"
                                    Width="23"
                                    Height="23" />
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Add Image Icon -->
            <Border SnapsToDevicePixels="True" Width="100" Height="100">
                <Rectangle Stroke="Gray"
                           Width="80"
                           Height="80"
                           StrokeDashArray="3"
                           StrokeThickness="1"
                           Margin="5 0">
                    <Rectangle.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding UploadCommand}" />
                    </Rectangle.InputBindings>

                    <Rectangle.Fill>
                        <ImageBrush
                            ImageSource="{Binding Source=media/image_add.png, Converter={local:FilepathBytesConverter}}"
                            Opacity="0.3"
                            Stretch="Fill"
                            Viewport="0.25 0.25 0.5 0.5" />
                    </Rectangle.Fill>
                    <!-- <Rectangle.Triggers> -->
                    <!--     <Trigger Property="Rectangle.IsMouseOver" Value="True"> -->
                    <!--         <Setter Property="Rectangle.Stroke" Value="Aquamarine" /> -->
                    <!--     </Trigger> -->
                    <!-- </Rectangle.Triggers> -->
                </Rectangle>
            </Border>
        </WrapPanel>
    </ScrollViewer>
</local:BasePage>